<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_6sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp">

        <TextView
            android:id="@+id/tv_medicine_type_side_effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine Type: Tablet"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14sdp"/>

        <TextView
            android:id="@+id/tv_medicine_name_side_effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine Name: Renidine"
            android:layout_below="@id/tv_medicine_type_side_effect"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14sdp"/>

        <TextView
            android:id="@+id/tv_medicine_time_side_effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine Time: 10:00 am"
            android:layout_below="@id/tv_medicine_name_side_effect"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14sdp"/>

        <TextView
            android:id="@+id/tv_see_details_side_effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See details"
            android:textColor="@android:color/black"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_5sdp"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>